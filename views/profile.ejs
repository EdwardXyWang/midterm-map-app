<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Profile</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css">
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Local Styles -->
    <link rel="stylesheet" href="/styles/main.css">

  </head>

  <body>
    <% include partials/_navbar %>
    <div class="container-fluid profile-page">
      <div class="row">
         <div class="col-md-8"><h4><%=fname%> <%=lname%></h4></div>
      </div>
      <hr class="featurette-divider">
      <div class="row row-centered">
        <div class="col-md-3 col-centered">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title"><%=fname%>'s maps</h3>
              </div>
              <div class="panel-body list-group map-list">
                <!--USER MAPS LIST GENERATED HERE -->
              </div>
            </div>
        </div>
        <div class="col-md-3 col-centered col-md-offset-1">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">
                Maps <%=fname%> has contributed to
              </h3>
            </div>
            <div class="panel-body list-group map-contributions">
              <!--USER MAPS LIST GENERATED HERE -->
            </div>
          </div>
        </div>
        <div class="col-md-3 col-centered col-md-offset-1">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">
                <%=fname%>'s favourites
              </h3>
            </div>
            <div class="panel-body list-group map-favourites">
              <!--USER MAPS LIST GENERATED HERE -->
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- JQuery and local scripts -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/profile.js"></script>
    <script type="text/javascript" src="/scripts/nav.js"></script>
  </body>
</html>
